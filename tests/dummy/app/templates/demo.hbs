<div class="demo-container">
  {{#ember-table
    tree=tree
    columns=columns
    columnMode="fluid"
    numFixedColumns=1
    footerRows=footerRows
    as |t|
  }}
    {{#ember-table-row
      row=t

      as |cell|
    }}

      {{#if cell.column.cellComponent}}
        {{component cell.column.cellComponent cell=cell}}
      {{else}}
        <div {{action "onCellClicked" cell}} class={{if cell.wasClicked "red-cell"}}>
          {{cell.value}}
        </div>
      {{/if}}
    {{/ember-table-row}}
  {{/ember-table}}
</div>
