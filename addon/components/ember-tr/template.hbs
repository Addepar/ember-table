{{#each cells as |api|}}
  {{#if hasBlock}}
    {{#if isHeader}}
      {{yield (hash
        columnValue=api.columnValue
        columnMeta=api.columnMeta

        enableResize=api.enableResize
        enableReorder=api.enableReorder

        sorts=api.sorts
        isSortable=api.isSortable
        sendUpdateSort=api.sendUpdateSort

        cell=(component "ember-th" api=api)
      )}}
    {{else}}
      {{yield (hash
        cellValue=api.cellValue
        cellMeta=api.cellMeta

        columnValue=api.columnValue
        columnMeta=api.columnMeta

        rowValue=api.rowValue
        rowMeta=api.rowMeta

        rowSelectionMode=api.rowSelectionMode
        checkboxSelectionMode=api.checkboxSelectionMode

        cell=(component "ember-td" api=api)
      )}}
    {{/if}}
  {{else if isHeader}}
    {{ember-th api=api}}
  {{else}}
    {{ember-td api=api}}
  {{/if}}
{{/each}}
