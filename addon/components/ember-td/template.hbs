{{#if isFirstColumn}}
  <div class="et-cell-container {{if (and isFirstColumn canSelect) 'flex items-center'}}">
    {{#if this.canSelect}}
      <span
        class="et-toggle-select {{unless this.shouldShowCheckbox 'et-speech-only'}}"
        data-test-select-row-container
      >
        {{
          component
          this.api.checkboxComponent
          data-test-select-row=true
          checked=rowMeta.isGroupSelected
          onClick=(action 'onSelectionToggled')
          onChange=(action 'onSelectionToggled')
          ariaLabel='Select row'
        }}
        <span></span>
      </span>
    {{/if}}
    {{#if canCollapse}}
      <span class="et-toggle-collapse et-depth-indent {{depthClass}}">
        {{
          component
          this.api.toggleComponent
          data-test-collapse-row=true
          checked=rowMeta.isCollapsed
          onChange=(action "onCollapseToggled")
          isCollapsed=rowMeta.isCollapsed
          onClick=(action 'onCollapseToggled')
          ariaLabel='Collapse row'
        }}
        <span></span>
      </span>
    {{else}}
      <div class="et-depth-indent et-depth-placeholder {{depthClass}}"></div>
    {{/if}}
    <div class='flex-1 et-cell-content'>
      {{#if hasBlock}}
        {{yield cellValue columnValue rowValue cellMeta columnMeta rowMeta rowsCount}}
      {{else}}
        {{cellValue}}
      {{/if}}
    </div>
  </div>
{{else if hasBlock}}
  {{yield cellValue columnValue rowValue cellMeta columnMeta rowMeta}}
{{else}}
  {{#if hasBlock}}
    {{yield cellValue columnValue rowValue cellMeta columnMeta rowMeta rowsCount}}
  {{else}}
    {{cellValue}}
  {{/if}}
{{/if}}
