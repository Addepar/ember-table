{{#if hasCheckbox}}
  {{-ember-table-private/simple-checkbox
    checked=rowMeta.isSelected
    onClick="onCheckboxClicked"
    onChange="onCheckboxToggled"
    ariaLabel="Row Select"
  }}
{{/if}}

{{#if hasBlock}}
  {{yield cellValue columnValue rowValue cellMeta columnMeta rowMeta}}
{{else}}
  {{cellValue}}
{{/if}}
